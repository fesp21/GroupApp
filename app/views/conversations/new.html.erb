<h1>New conversation</h1>

<% form_for(@conversation) do |f| %>
  <%= f.error_messages %>
<!--
  <p>
    <%= f.label :origin %><br />
    <%= f.text_field :origin %>
  </p>
-->
  <p>
	<% @users = User.all %>
    <%= f.label :target %><br />
    <%= f.select(:target, @users.collect {|u| u.username }) %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.label :Check_to_also_send_a_text_message %><br />
    <%= f.check_box :also_text %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', :back %>