<%= render :file => 'groups/header.html.erb' %>
<div id="maincontent-box">
	<div id="maincontent-head">
		<strong><%=h @group.name %> - Posts</strong>
	</div>
	<div id="maincontent-body">
		<% form_for [@group,@post] do |f| %>
		  <%= f.error_messages %>

		  <p>
			<%= f.label :title %><br />
			<%= f.text_field :title %>
		  </p>
		  <p>
			<%= f.label :body %><br />
			<%= f.text_area :body %>
		  </p>
		  <p>
			<%= f.submit 'Update' %>
		  </p>
		<% end %>

		<%= link_to 'Back', group_posts_path(@group) %>
	</div>
</div>