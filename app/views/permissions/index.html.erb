<h1>Listing permissions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @permissions.each do |permission| %>
  <tr>
    <td><%=h permission.name %></td>
    <td><%=h permission.description %></td>
    <td><%= link_to 'Show', permission %></td>
    <td><%= link_to 'Edit', edit_permission_path(permission) %></td>
    <td><%= link_to 'Destroy', permission, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New permission', new_permission_path %>