<%= render :file => 'users/header.html.erb' %>

<h1>Settings</h1>

<% form_for current_user, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.label :phone_carrier %><br />
    <%= f.select(:phone_carrier, [["AT&T","at&t"], ["Comcast PCS", "comcast"], ["Metro PCS","metropcs"], ["Nextel","nextel"], ["Qwest","qwest"], ["Sprint PCS","sprint"], ["T-Mobile","t-mobile"], ["Tracfone","tracfone"], ["Virgin Mobile","virgin"], ["Verizon Wireless","verizon"]]) %>
  </p>
  <p>
    <%= f.label :allow_text %><br />
    <%= f.check_box :allow_text %>
  </p>
  <p>
	<%= "Change Profile Picture: " %><br/>
	<%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', current_user %>