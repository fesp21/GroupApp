<%= render :file => 'users/header.html.erb' %>
<h1>Welcome</h1>

It's <%= Time.now %>
<p>
Your ID is <%= current_user.id %>
<p>
  <b>Name:</b>
  <%=h current_user.username %>
</p>

<div id="messaging">
	<% @conversations = Conversation.find(:all) %>
	<table>
	<% if @conversations != nil %>
	
	<% @conversations.each do |conversation| %>
	  <% if conversation.origin == current_user.username %>
	  <tr>
		<td><bold>TO:</bold></td>
	    <td><%=h conversation.target %></td>
	    <td><%=h conversation.message %></td>
	    <td><%= link_to 'x', conversation, :confirm => 'Are you sure you want to delete this message?', :method => :delete %></td>
	  </tr>
	  <% end %>
	  <% if conversation.target == current_user.username %>
	  <tr>
		<td><bold>FROM:</bold></td>
	    <td><%=h conversation.origin %></td>
	    <td><%=h conversation.message %></td>
	    <td><%= link_to 'x', conversation, :method => :delete %></td>
	  </tr>
	  <% end %>
	<% end %>
	<% end %>
	<%= link_to 'New conversation', new_conversation_path %>
	</table>
</div>


</p>
<%= link_to 'Groups', :controller => 'groups', :action => 'index' %>   
<%= link_to 'Logout', logout_path %>
