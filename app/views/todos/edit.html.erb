<%= render :file => 'groups/header.html.erb' %>

<h1>Editing todo</h1>

<% form_for([@group, @todo]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :task %><br />
    <%= f.text_field :task %>
  </p>
  <p>
    <%= f.label :duedate %><br />
    <%= f.date_select :duedate %>
  </p>
  <p>
    <%= f.label :finished %><br />
    <%= f.check_box :finished %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [@group, @todo] %> |
<%= link_to 'Back', group_todos_path(@group) %>