<%= render :file => 'groups/header.html.erb' %>

<h1>Editing upload</h1>

<% form_for [@group, @upload] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :filename %><br />
    <%= f.text_field :filename %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
	<%= f.file_field :attachment %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [@group, @upload] %> |
<%= link_to 'Back', group_uploads_path(@group) %>