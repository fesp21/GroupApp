<h1>Listing uploads</h1>

<table>
  <tr>
    <th>Gid</th>
    <th>Filename</th>
    <th>Description</th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%=h upload.gid %></td>
    <td><%=h upload.filename %></td>
    <td><%=h upload.description %></td>
    <td><%= link_to 'Download', upload.attachment.url%></td>
    <td><%= link_to 'Destroy', upload, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New upload', new_upload_path %>