<% div_for comment do %>
	<p>
		<strong>Posted <%= time_ago_in_words(comment.created_at) %> ago </strong><br />
		<strong>By <%= h(User.find_by_id(comment.user_id).name) %></strong><br />
		<%= h(comment.body) %><br />
		<% if @post.user_id == session[:user_id]%>
		<%= link_to 'Destroy', [comment.post, comment], :method => :delete, :confirm => "Are you sure?" %>
		<% end %>
	</p>
<% end %>