<% div_for comment do %>
	<p>
		<div id="boldname"><%= h(User.find_by_id(comment.user_id).username) %>:</div>
		<%= h(comment.body) %>
		<% if comment.user_id == current_user.id%>
		<br />
		<% @commenttime = comment.created_at %>

		<% if @commenttime != nil%>
			Comment posted 
			<% if @commenttime > 48.hours.ago%>
				<%= time_ago_in_words(@commenttime) %> ago
			<% else %>
				on <%= @commenttime.strftime("%m/%d/%y") %>
			<% end %>
		<% end %>
		<%= link_to 'Delete', [comment.post, comment], :method => :delete, :confirm => "Are you sure?" %>
		<% end %>
	</p>
	<div id="maincontent-line"></div>
<% end %>