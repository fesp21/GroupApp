<%= render :file => 'groups/header.html.erb' %>

<p>
  <b>Group Name:</b>
  <%=h @group.name %>
</p>

<p>
  <b>Group Description:</b>
  <%=h @group.description %>
</p>
<p>
<% if @member.permission==0 %>
<%=h "You are an admin" %>
<% else %>
<%=h "You are a normal user"%>
<% end %>
</p>

<table>
  <tr>
	<th>Description</th>
    <th>Time</th>
  </tr>

<% @group.newsfeeds.each do |newsfeed| %>
  <tr>
    <td><%=h newsfeed.descriptions %></td>
	<td><%=h newsfeed.time %></td>
	<td><%= link_to 'edit', edit_group_newsfeed_path(@group, newsfeed) %></td>
    <td><%= link_to 'delete', [@group, newsfeed], :confirm => 'Are you sure?', :method => :delete%></td>
  </tr>
<% end %>

</table>

<br/>
<%= link_to 'Back', groups_path %>